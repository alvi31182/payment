#!/bin/bash

cd /var/www/payment

./vendor/bin/phpunit

if [ $? -ne 0 ]; then
    echo "Запуск тестов не пройден. Коммит отклонен."
    exit 1
fi

./vendor/bin/psalm

if [ $? -ne 0 ]; then
    echo "Проверка Psalm не пройдена. Коммит отклонен."
    exit 1
fi

./vendor/bin/phpcs -s

if [ $? -ne 0 ]; then
    echo "Проверка CodeSniffer не пройдена. Коммит отклонен."
    exit 1
fi

exit 0